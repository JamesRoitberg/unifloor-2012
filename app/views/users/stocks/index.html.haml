%section.stocks
  %h2 Estoques
  = link_to 'Novo Estoque', new_users_stock_path
  = link_to "Voltar", users_root_path, :class=> "back"
  %table
    %tr
      %th Codigo
      %th Produto
      %th Status
      %th Quantidade
    - @stocks.each do |stock|
      %tr
        %td= stock.code
        %td= stock.product
        %td= stock.status
        %td= stock.amount
        %td= link_to 'Mostrar', [:users, stock]
        %td= link_to 'Editar', edit_users_stock_path(stock)
        %td= link_to 'Deletar', [:users, stock], :confirm => 'VocÃª tem certeza?', :method => :delete



